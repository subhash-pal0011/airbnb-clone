<% layout("/layout/boilerplate") %>

       <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh; padding: 0;">
              <div class="w-100" style="max-width: 500px; margin-top: 20px;">
                     <h2 class="text-center mb-4">Login Form</h2>

                     <form action="/login" method="POST" class="needs-validation" novalidate>

                            <!-- Email/Username -->
                            <div class="mb-3">
                                   <label for="username" class="form-label">Email or Username</label>
                                   <input type="email" name="email" class="form-control" id="username" required>
                                   <div class="invalid-feedback">Please enter a valid username or email.</div>
                            </div>

                            <!-- Password -->
                            <div class="mb-3">
                                   <label for="password" class="form-label">Password</label>
                                   <input type="password" name="password" class="form-control" id="password" required>
                                   <div class="invalid-feedback">Please enter your password.</div>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Login</button>
                     </form>
              </div>
       </div>